@model IEnumerable<CasusBlok4.Models.Entity.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Mijn transacties</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDonation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDonation)
            </td>
            <td>
                <form asp-action="Details" asp-route-id="@item.TransactionId" method="get">
                    <button class="btn btn-info">Details</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
